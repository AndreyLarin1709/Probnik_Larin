<Window x:Class="TestDemo.Views.AddEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TestDemo.Views"
        mc:Ignorable="d"
        Title="AddEditWindow" Height="450" Width="400">
    <Grid>
        <StackPanel Orientation="Vertical" Margin="10">
            <Label Content="Наименование" Margin="5"/>
            <TextBox Name="name" Margin="5" Padding="5"/>

            <Label Content="Тип" Margin="5"/>
            <ComboBox Name="type" Margin="5" Padding="5" DisplayMemberPath="Title"/>
            <Label Content="рейтинг" Margin="5"/>
            <TextBox Name="rat" Margin="5" Padding="5"/>
            <Button Content="lf" Name="add"/>
        </StackPanel>
    </Grid>
</Window>
